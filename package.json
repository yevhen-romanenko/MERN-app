{
    "name": "mern-app",
    "version": "1.0.0",
    "description": "MERN stack",
    "main": "app.js",
    "scripts": {
        "start": "cross-env NODE_ENV=production node app.js",
        "server": "nodemon app.js",
        "client": "npm run start --prefix client",
        "client:install": "npm install --prefix client",
        "client:build": "npm run build --prefix client",
        "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\" "
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yevhen-romanenko/MERN-app.git"
    },
    "keywords": [
        "mern",
        "react",
        "node",
        "mongodb",
        "express",
        "js"
    ],
    "author": "Yevhen Romanenko <strkromik@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/yevhen-romanenko/MERN-app/issues"
    },
    "homepage": "https://github.com/yevhen-romanenko/MERN-app#readme",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "config": "^3.3.1",
        "express": "^4.17.1",
        "express-validator": "^6.6.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.10.3",
        "shortid": "^2.2.15"
    },
    "devDependencies": {
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.2",
        "nodemon": "^2.0.4"
    }
}
